<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado"
    tools:context="com.example.genesiszul.twitter.MainActivity">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/blanco_twitter"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="170dp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto1"
            android:textColor="#ffff"
            android:textSize="18dp"/>
        <TextView
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto2"
            android:textColor="#ffff"
            android:textSize="18dp"/>
        <Button
            android:layout_marginTop="40dp"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="@string/boton1"
            android:textAllCaps="false"
            android:background="@drawable/boton"
            android:textColor="#1d9de2"
            />

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="@string/boton2"
            android:textAllCaps="false"
            android:background="@drawable/boton1"
            android:textColor="#fff"
            />
    </LinearLayout>
</LinearLayout>
